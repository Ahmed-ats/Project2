<div id="profile-page-container">

    {{!-- left most card on first row - Info About User --}}
    <div class="profile-card" id="user-bio">
        <div class="profile-title">
            <h3>Hello {{user.fullName}}!</h3>
        </div>
         <div class="profile-content">
            {{!-- uk-card-body as class with the profile content above to keep text within the border? uk-card-body --}}
            <p><span uk-icon="user"></span>&nbsp; &nbsp;{{user.userName}}</p>
            <p class="uk-text-truncate"><span uk-icon="github"></span>&nbsp; &nbsp;<a href="{{user.github}}">{{user.github}}</p></a>
            <p class="uk-text-truncate"><span uk-icon="linkedin"></span>&nbsp; &nbsp;<a href="{{user.linkedin}}">{{user.linkedin}}</p></a>
            <p><strong>About me</strong></p>
            <p class="uk-text-break">{{user.profileStatement}}</p>
        </div>
    </div>
    
    {{!-- middle card on first row - displays current user's skills --}}
    <div class="profile-card" id="user-skills">
        <div class="profile-title">
            <h3>My Skills Profile</h3>
        </div>
        <div class="profile-content">
            {{#if user.Skill.html}}
            <p class="uk-text-center">&nbsp;HTML&nbsp;
                {{/if}}
                {{#if user.Skill.css}}
                &nbsp;CSS&nbsp;
                {{/if}}
                {{#if user.Skill.javascript}}
                &nbsp;JAVASCRIPT&nbsp;
                {{/if}}
                {{#if user.Skill.jquery}}
                &nbsp;JQUERY&nbsp;
                {{/if}}
                {{#if user.Skill.node}}
                &nbsp;NODE&nbsp;
                {{/if}}
                {{#if user.Skill.express}}
                &nbsp;EXPRESS&nbsp;
                {{/if}}
                {{#if user.Skill.react}}
                &nbsp;REACT&nbsp;
                {{/if}}
                {{#if user.Skill.mongodb}}
                &nbsp;MONGODB&nbsp;
                {{/if}}
                {{#if user.Skill.mysql}}
                &nbsp;MYSQL&nbsp;
                {{/if}}
                {{#if user.Skill.handlebars}}
                &nbsp;HANDLEBARS&nbsp;</p>
            {{/if}}
        </div>
    </div>

    {{!-- right most card on first row - displays recommended connections --}}
    <div class="profile-card" id="user-matches">
        <div class="profile-title">
            <h3>Recommended Connections</h3>
        </div>
        
        <div class="profile-content">
            {{#each matches}}
            <ul>
                <p class="uk-icon-link" uk-icon="info" uk-toggle="target: #more-match-info{{this.id}}">{{this.userName}}
                    &nbsp;</p>

                {{!-- modal that displays more details when a recommended connection username is clicked --}}
                <div id="more-match-info{{this.id}}" uk-modal>
                    <div class="uk-modal-dialog">
                        <div class="uk-modal-header" id="connect-header">
                            <h2 class="uk-modal-title" id="connect-title">{{this.userName}}</h2>
                        </div>
                        <div class="uk-modal-body">
                            {{!-- To reengage the commented out line below, need to replace the handlebars after fullName   look, it is obvious --}}
                            {{!-- <p id="match-full-name">{{this.fullName</p> --}}
                            {{#if this.github}}
                            <p class="uk-text-truncate"><span uk-icon="github-alt"></span>&nbsp; : &nbsp;{{this.github}}</p>
                            {{/if}}
                            {{#if this.linkedin}}
                            <p class="uk-text-truncate"><span uk-icon="linkedin"></span>&nbsp; : &nbsp;{{this.linkedin}}</p>
                            {{/if}}
                            <p><strong> Skills</strong></p>
                            {{#if this.Skill.html}}
                            <div>&nbsp;HTML&nbsp;
                                {{/if}}
                                {{#if this.Skill.css}}
                                &nbsp;CSS&nbsp;
                                {{/if}}
                                {{#if this.Skill.javascript}}
                                &nbsp;JAVASCRIPT&nbsp;
                                {{/if}}
                                {{#if this.Skill.jquery}}
                                &nbsp;JQUERY&nbsp;
                                {{/if}}
                                {{#if this.Skill.node}}
                                &nbsp;NODE&nbsp;
                                {{/if}}
                                {{#if this.Skill.express}}
                                &nbsp;EXPRESS&nbsp;
                                {{/if}}
                                {{#if this.Skill.react}}
                                &nbsp;REACT&nbsp;
                                {{/if}}
                                {{#if this.Skill.mongodb}}
                                &nbsp;MONGODB&nbsp;
                                {{/if}}
                                {{#if this.Skill.mysql}}
                                &nbsp;MYSQL&nbsp;
                                {{/if}}
                                {{#if this.Skill.handlebars}}
                                &nbsp;HANDLEBARS&nbsp;</div>
                            {{/if}}

                            {{!-- added profile statement onto modal --}}
                            <div>
                                <p></p>
                                <p class="uk-text-break"><strong>About</strong> {{this.profileStatement}}</p>
                            </div>
                        </div>

                        {{!-- Modal footer with close & connect buttons --}}
                        <div class="uk-modal-footer uk-text-right">
                            <button class="uk-button uk-button-default uk-modal-close round" type="button">Close</button>

                            <button class="uk-button connect-modal uk-modal-close" data-connect-submit data-user="{{this.userName}}"
                                id="connect" type="button">Connect</button>
                        </div>

                    </div>
                </div>
            </ul>
            {{/each}}
        </div>
    </div>

    {{!-- second row card - displays connections that the current user has made from recommendations --}}
    <div class="profile-card" id="user-connections">
        <div class="profile-title">
            <h3>Personal Connections</h3>
        </div>
        <div class="profile-content">
            <ul>
                {{#each favorites}}
                <p>{{this.userName}}</p>
                {{/each}}

            </ul>
        </div>
    </div>

</div>

